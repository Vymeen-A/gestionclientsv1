<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tp.gestion_cleints.AuditLogsController"
      styleClass="content-area" spacing="20">
      
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="%nav.audit_logs" styleClass="section-header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="%btn.export_pdf" onAction="#handleExport" styleClass="button-secondary"/>
        <Button text="%btn.refresh" onAction="#handleRefresh" styleClass="button-primary"/>
        <Button text="%btn.back" onAction="#handleBack" styleClass="button-secondary"/>
    </HBox>

    <TableView fx:id="auditTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="%column.date" prefWidth="150"/>
            <TableColumn fx:id="userColumn" text="%column.username" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="%column.action" prefWidth="100"/>
            <TableColumn fx:id="entityColumn" text="%column.entity" prefWidth="120"/>
            <TableColumn fx:id="detailsColumn" text="%column.details" prefWidth="400"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
