<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="tp.gestion_cleints.ProfileController" 
      spacing="30" styleClass="content-pane"
      stylesheets="@styles.css">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="â†" onAction="#handleBack" styleClass="back-button"/>
        <Label text="%user.profile" styleClass="section-header"/>
    </HBox>

    <HBox spacing="50" alignment="TOP_CENTER">
        <!-- Photo Section -->
        <VBox spacing="15" alignment="CENTER">
            <StackPane styleClass="profile-photo-container">
                <ImageView fx:id="profilePhotoView" fitHeight="200" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@images/user.png"/>
                    </image>
                </ImageView>
            </StackPane>
            <Button text="%user.change_photo" onAction="#handleChangePhoto" styleClass="button-secondary"/>
        </VBox>

        <!-- Info Section -->
        <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="500">
            <VBox spacing="5">
                <Label text="%user.username" styleClass="summary-label-title"/>
                <TextField fx:id="usernameField" editable="false" styleClass="text-field-readonly"/>
            </VBox>

            <VBox spacing="5">
                <Label text="%user.full_name" styleClass="summary-label-title"/>
                <TextField fx:id="fullNameField" promptText="%form.name_prompt" styleClass="text-field"/>
            </VBox>

            <VBox spacing="5">
                <Label text="%user.role" styleClass="summary-label-title"/>
                <TextField fx:id="roleField" editable="false" styleClass="text-field-readonly"/>
            </VBox>

            <VBox spacing="5">
                <Label text="%user.email" styleClass="summary-label-title"/>
                <TextField fx:id="emailField" promptText="email@example.com" styleClass="text-field"/>
            </VBox>

            <VBox spacing="5">
                <Label text="%user.phone" styleClass="summary-label-title"/>
                <TextField fx:id="phoneField" promptText="+212 ..." styleClass="text-field"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <Button text="%nav.security" onAction="#handleShowSecurity" styleClass="button-action"/>
                <Button text="%user.save_profile" onAction="#handleSave" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
