<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tp.gestion_cleints.ClientNamesController" 
            fitToWidth="true" fitToHeight="true"
            stylesheets="@styles.css">

    <VBox styleClass="content-area" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label fx:id="headerLabel" text="%nav.client_summary" styleClass="section-header"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="300"/>
        </HBox>

        <ListView fx:id="clientNamesList" VBox.vgrow="ALWAYS" />
    </VBox>
</ScrollPane>
