<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tp.gestion_cleints.HelloController" stylesheets="@styles.css">
    <left>
        <VBox styleClass="sidebar" spacing="20" minWidth="250">
            <Label text="Gestion Client" styleClass="title-label"/>
            
            <VBox spacing="10" styleClass="form-container">
                <Label text="Add New Client" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="nameField" promptText="Name"/>
                <TextField fx:id="emailField" promptText="Email"/>
                <TextField fx:id="phoneField" promptText="Phone"/>
                <TextField fx:id="addressField" promptText="Address"/>
                <TextField fx:id="revenueField" promptText="Revenue Amount (0.00)"/>
                <TextArea fx:id="notesArea" promptText="Notes" prefRowCount="3"/>
                <Button text="Add Client" onAction="#handleAddClient" maxWidth="Infinity"/>
            </VBox>
            
            <VBox VBox.vgrow="ALWAYS"/> <!-- Spacer -->
            
            <Button text="Delete Selected" styleClass="button-danger" onAction="#handleDeleteClient" maxWidth="Infinity"/>
        </VBox>
    </left>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Statistics Section -->
            <HBox spacing="20">
                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <Label text="Total Clients" styleClass="stat-title"/>
                    <Label fx:id="totalClientsLabel" text="0" styleClass="stat-value"/>
                </VBox>
                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <Label text="Total Revenue" styleClass="stat-title"/>
                    <Label fx:id="totalRevenueLabel" text="$0.00" styleClass="stat-value"/>
                </VBox>
            </HBox>
            
            <!-- Clients Table -->
            <TableView fx:id="clientTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="100"/>
                    <TableColumn fx:id="revenueColumn" text="Revenue" prefWidth="100"/>
                    <TableColumn fx:id="addressColumn" text="Address" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
