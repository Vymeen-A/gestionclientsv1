<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="tp.gestion_cleints.LoginController" 
      alignment="CENTER" spacing="0" 
      styleClass="root"
      prefWidth="500" prefHeight="450"
      stylesheets="@styles.css">
    
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
        <Button text="â€”" onAction="#handleMinimize" styleClass="window-control-button"/>
        <Button text="âœ•" onAction="#handleExit" styleClass="window-control-button" style="-fx-text-fill: #e74c3c;"/>
    </HBox>
    
    <Region VBox.vgrow="ALWAYS" />
    
    <VBox spacing="30" alignment="CENTER" styleClass="stat-card" maxWidth="400" style="-fx-padding: 40;">
        <VBox spacing="10" alignment="CENTER">
            <Label text="%login.title" styleClass="section-header" style="-fx-padding: 0;"/>
            <Label text="%login.header" styleClass="stat-title"/>
        </VBox>
        
        <VBox spacing="15" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="%login.password" styleClass="summary-label-title"/>
                <HBox spacing="0" alignment="CENTER_LEFT" styleClass="password-container">
                    <StackPane HBox.hgrow="ALWAYS">
                        <PasswordField fx:id="passwordField" promptText="%login.password_prompt" onAction="#handleLogin" styleClass="password-input-field"/>
                        <TextField fx:id="passwordTextField" promptText="%login.password_prompt" onAction="#handleLogin" visible="false" managed="false" styleClass="password-input-field"/>
                    </StackPane>
                    <Button fx:id="togglePasswordButton" onAction="#togglePasswordVisibility" styleClass="eye-button" text="ðŸ‘"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="%nav.years" styleClass="summary-label-title"/>
                <ComboBox fx:id="yearComboBox" maxWidth="Infinity" styleClass="text-field" promptText="%nav.select_year"/>
            </VBox>
        </VBox>
        
        <Button text="%login.btn_login" onAction="#handleLogin" styleClass="button-primary" maxWidth="Infinity"/>
        <Button text="%login.btn_reset" onAction="#handleResetPassword" styleClass="button-secondary" maxWidth="Infinity"/>
        
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
    </VBox>
    <Region VBox.vgrow="ALWAYS" />
</VBox>
