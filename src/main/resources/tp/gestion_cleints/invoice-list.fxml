<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tp.gestion_cleints.InvoiceListController"
      styleClass="content-area" spacing="20">
      
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="%nav.invoices" styleClass="section-header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="300"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="%btn.add_invoice" onAction="#handleAddInvoice" styleClass="button-primary"/>
        <Button text="Aging Report" onAction="#handleShowAging" styleClass="button-secondary"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="%btn.print" onAction="#handlePrintInvoice" styleClass="button-secondary"/>
        <Button text="%btn.delete" onAction="#handleDeleteInvoice" styleClass="button-danger"/>
    </HBox>

    <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="numberColumn" text="%column.number" prefWidth="120"/>
            <TableColumn fx:id="clientColumn" text="%column.client" prefWidth="200"/>
            <TableColumn fx:id="dateColumn" text="%column.date" prefWidth="100"/>
            <TableColumn fx:id="totalColumn" text="%column.ttc" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="%column.status" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
