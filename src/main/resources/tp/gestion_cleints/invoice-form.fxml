<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tp.gestion_cleints.InvoiceFormController"
      spacing="15" prefWidth="450">
      
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="%btn.add_invoice" styleClass="section-header" style="-fx-font-size: 20;"/>

    <GridPane hgap="10" vgap="15">
        <Label text="%column.client" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="clientCombo" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="%column.number" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="numberField" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="%column.date" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="%column.due_date" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="%column.ht" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="htField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="%column.tva" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="tvaField" text="20" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="%column.ttc" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="ttcField" disable="true" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%btn.cancel" onAction="#handleCancel" styleClass="button-secondary"/>
        <Button text="%btn.save" onAction="#handleSave" styleClass="button-primary"/>
    </HBox>
</VBox>
