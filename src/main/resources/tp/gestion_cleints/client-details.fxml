<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tp.gestion_cleints.ClientDetailsController" 
            fitToWidth="true" fitToHeight="true"
            prefWidth="1050" prefHeight="800"
            stylesheets="@styles.css">

    <VBox spacing="35" styleClass="content-area" style="-fx-padding: 40;">
        <HBox spacing="35" VBox.vgrow="ALWAYS">
            <!-- Main Content Area (Left) -->
            <VBox spacing="30" HBox.hgrow="ALWAYS">
                <!-- Header -->
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
                    <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                        <image>
                            <Image url="@images/for-detailles-window.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="8">
                        <Label fx:id="clientNameLabel" text="Client Name" styleClass="section-header" style="-fx-font-size: 32px;"/>
                        <Label text="%details.subtitle" style="-fx-text-fill: #95a5a6; -fx-font-size: 14px;"/>
                    </VBox>
                </HBox>

                <!-- Metrics Row (Accountant View) -->
                <HBox spacing="20">
                    <!-- Card 1: Total Honoraires (Fees) -->
                    <VBox styleClass="detail-summary-box" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: #e3f2fd; -fx-border-color: #bbdefb; -fx-border-radius: 8;">
                        <Label text="TOTAL HONORAIRES" styleClass="summary-label-title" style="-fx-text-fill: #1565c0; -fx-font-weight: bold;"/>
                        <Label fx:id="totalFeesLabel" text="0.00 MAD" styleClass="summary-label-value" style="-fx-text-fill: #1565c0;"/>
                    </VBox>
                    
                    <!-- Card 2: Total Charges (Debit) -->
                    <VBox styleClass="detail-summary-box" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: #ffebee; -fx-border-color: #ffcdd2; -fx-border-radius: 8;">
                        <Label text="CHARGES (DEBIT)" styleClass="summary-label-title" style="-fx-text-fill: #c62828; -fx-font-weight: bold;"/>
                        <Label fx:id="totalChargesLabel" text="0.00 MAD" styleClass="summary-label-value" style="-fx-text-fill: #c62828;"/>
                    </VBox>

                    <!-- Card 3: Total Payments (Credit) -->
                    <VBox styleClass="detail-summary-box" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: #e8f5e9; -fx-border-color: #c8e6c9; -fx-border-radius: 8;">
                        <Label text="PAIEMENTS (CREDIT)" styleClass="summary-label-title" style="-fx-text-fill: #2e7d32; -fx-font-weight: bold;"/>
                        <Label fx:id="totalPaymentsLabel" text="0.00 MAD" styleClass="summary-label-value" style="-fx-text-fill: #2e7d32;"/>
                    </VBox>

                    <!-- Card 4: Net Balance -->
                    <VBox styleClass="detail-summary-box" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: #fff3e0; -fx-border-color: #ffe0b2; -fx-border-radius: 8;">
                        <Label text="SOLDE NET" styleClass="summary-label-title" style="-fx-text-fill: #ef6c00; -fx-font-weight: bold;"/>
                        <Label fx:id="netBalanceLabel" text="0.00 MAD" styleClass="summary-label-value" style="-fx-text-fill: #ef6c00;"/>
                    </VBox>
                </HBox>

                <!-- Table Card -->
                <VBox spacing="15" VBox.vgrow="ALWAYS" styleClass="stat-card" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                            <image>
                                <Image url="@images/for-add-transaction.png"/>
                            </image>
                        </ImageView>
                        <Label text="JOURNAL DES TRANSACTIONS" styleClass="stat-title"/>
                        <Region HBox.hgrow="ALWAYS"/>

                        <Button text="%details.btn.preview_receipt" onAction="#handlePreviewReceipt" styleClass="button-secondary" style="-fx-font-size: 12px;"/>
                    </HBox>
                    <TableView fx:id="transactionTable" prefHeight="450" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="dateColumn" text="DATE" prefWidth="100"/>
                            <TableColumn fx:id="typeColumn" text="TYPE" prefWidth="120"/>
                            <TableColumn fx:id="notesColumn" text="DESCRIPTION" prefWidth="250"/>
                            <TableColumn fx:id="debitColumn" text="DEBIT (Client Doit)" prefWidth="120" style="-fx-text-fill: #c62828;"/>
                            <TableColumn fx:id="creditColumn" text="CREDIT (Client Paie)" prefWidth="120" style="-fx-text-fill: #2e7d32;"/>
                            <TableColumn fx:id="balanceColumn" text="SOLDE" prefWidth="120" style="-fx-font-weight: bold;"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </VBox>

            <!-- Sidebar Area (Right) -->
            <VBox spacing="25" prefWidth="300" styleClass="stat-card" style="-fx-padding: 30; -fx-background-color: #ffffff; -fx-border-color: #f1f3f5; -fx-border-width: 0 0 0 1;">
                <Label text="%details.metadata" styleClass="stat-title" style="-fx-padding: 0 0 15 0;"/>
                
                <VBox spacing="20">
                    <VBox spacing="5">
                        <Label text="%details.ice_registration" styleClass="summary-label-title" style="-fx-font-size: 10px;"/>
                        <Label fx:id="clientIceLabel" text="-" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 15px;"/>
                    </VBox>

                    <VBox spacing="5">
                         <Label text="%client.username" styleClass="summary-label-title" style="-fx-font-size: 10px;"/>
                         <Label fx:id="clientUsernameLabel" text="-" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="5">
                         <Label text="%client.password" styleClass="summary-label-title" style="-fx-font-size: 10px;"/>
                         <Label fx:id="clientPasswordLabel" text="-" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                    </VBox>
                </VBox>

                <Separator style="-fx-padding: 10 0;"/>

                <VBox spacing="15">
                    <Button text="%details.btn.record_payment" onAction="#handleAddTransaction" styleClass="button-primary" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-padding: 12;"/>

                    <Button text="%details.btn.preview_statement" onAction="#handlePreviewStatement" styleClass="button-secondary" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-padding: 12;"/>
                    <Separator style="-fx-padding: 5 0;"/>
                    <Button text="%details.btn.edit_entry" onAction="#handleEditTransaction" styleClass="button-secondary" maxWidth="Infinity" style="-fx-padding: 10;"/>
                    <Button text="%btn.delete" onAction="#handleDeleteTransaction" styleClass="button-danger" maxWidth="Infinity" style="-fx-padding: 10;"/>
                </VBox>

                <Region VBox.vgrow="ALWAYS"/>
                
                <Button text="%details.btn.return" onAction="#handleClose" styleClass="button-secondary" maxWidth="Infinity" style="-fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </VBox>
</ScrollPane>
