<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tp.gestion_cleints.ChangePasswordController" 
            fitToWidth="true" fitToHeight="true"
            stylesheets="@styles.css">

    <VBox spacing="30" styleClass="content-area" alignment="TOP_CENTER">
        <Label text="%header.security" styleClass="section-header"/>
        
        <VBox spacing="25" maxWidth="450" styleClass="stat-card" style="-fx-padding: 30;">
            <Label text="Modify Administrator Password" styleClass="stat-title"/>
            
            <VBox spacing="15">
                <VBox spacing="5">
                    <Label text="Current Password" styleClass="summary-label-title"/>
                    <PasswordField fx:id="currentPasswordField" promptText="Current Password"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="New Password" styleClass="summary-label-title"/>
                    <PasswordField fx:id="newPasswordField" promptText="New Password"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Confirm New Password" styleClass="summary-label-title"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password"/>
                </VBox>
            </VBox>
            
            <Button text="Update Password" onAction="#handleUpdatePassword" styleClass="button-primary" maxWidth="Infinity"/>
            
            <Label fx:id="statusLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" wrapText="true"/>
        </VBox>
    </VBox>
</ScrollPane>
