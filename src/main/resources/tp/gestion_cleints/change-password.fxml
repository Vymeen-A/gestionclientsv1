<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml" 
           fx:controller="tp.gestion_cleints.ChangePasswordController" 
           stylesheets="@styles.css"
           style="-fx-background-color: transparent; -fx-padding: 20;">

    <VBox spacing="20" 
          alignment="CENTER"
          maxWidth="450"
          styleClass="stat-card"
          style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 10);">
    
        <Label text="%login.btn_change" styleClass="section-header" style="-fx-font-size: 22px; -fx-padding: 0 0 10 0;"/>
        
        <VBox spacing="15" maxWidth="Infinity">
            <VBox spacing="5">
                <Label text="%login.current_password" styleClass="summary-label-title"/>
                <HBox spacing="0" alignment="CENTER_LEFT" styleClass="password-container">
                    <StackPane HBox.hgrow="ALWAYS">
                        <PasswordField fx:id="currentPasswordField" promptText="%login.current_password" styleClass="password-input-field" style="-fx-background-color: #f1f3f5;"/>
                        <TextField fx:id="currentTextField" visible="false" managed="false" styleClass="password-input-field" style="-fx-background-color: #f1f3f5;"/>
                    </StackPane>
                </HBox>
            </VBox>
            
            <VBox spacing="5">
                <Label text="%login.new_password" styleClass="summary-label-title"/>
                <HBox spacing="0" alignment="CENTER_LEFT" styleClass="password-container">
                    <StackPane HBox.hgrow="ALWAYS">
                        <PasswordField fx:id="newPasswordField" promptText="%login.new_password" styleClass="password-input-field"/>
                        <TextField fx:id="newTextField" visible="false" managed="false" styleClass="password-input-field"/>
                    </StackPane>
                    <Button fx:id="toggleNewButton" onAction="#toggleNewVisibility" styleClass="eye-button" text="ðŸ‘"/>
                </HBox>
            </VBox>
            
            <VBox spacing="5">
                <Label text="%login.confirm_password" styleClass="summary-label-title"/>
                <HBox spacing="0" alignment="CENTER_LEFT" styleClass="password-container">
                    <StackPane HBox.hgrow="ALWAYS">
                        <PasswordField fx:id="confirmPasswordField" promptText="%login.confirm_password" styleClass="password-input-field"/>
                        <TextField fx:id="confirmTextField" visible="false" managed="false" styleClass="password-input-field"/>
                    </StackPane>
                    <Button fx:id="toggleConfirmButton" onAction="#toggleConfirmVisibility" styleClass="eye-button" text="ðŸ‘"/>
                </HBox>
            </VBox>
        </VBox>
        
        <VBox spacing="10" alignment="CENTER" maxWidth="Infinity" style="-fx-padding: 10 0 0 0;">
            <Button text="%btn.save" onAction="#handleUpdatePassword" styleClass="button-primary" maxWidth="Infinity" style="-fx-font-size: 14px;"/>
        </VBox>
        
        <Label fx:id="statusLabel" text="" wrapText="true" alignment="CENTER" style="-fx-font-size: 12px;"/>
    </VBox>
    
</StackPane>
