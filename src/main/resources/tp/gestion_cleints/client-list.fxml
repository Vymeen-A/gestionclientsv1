<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tp.gestion_cleints.ClientListController" 
            fitToWidth="true" fitToHeight="true"
            stylesheets="@styles.css">

    <VBox styleClass="content-area" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="%header.clients" styleClass="section-header"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="300"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="%btn.add_client" onAction="#handleAddClient" styleClass="button-primary"/>
            <Button text="%btn.edit" onAction="#handleEditClient" styleClass="button-secondary"/>
            <Button text="%btn.details" onAction="#handleViewDetails" styleClass="button-secondary"/>
            <Button text="%btn.delete" onAction="#handleDeleteClient" styleClass="button-danger"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="%btn.export_data" onAction="#handleExportData" styleClass="button-secondary"/>
            <Button text="%btn.import_data" onAction="#handleImportData" styleClass="button-secondary"/>
        </HBox>

        <TableView fx:id="clientTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="idColumn" text="%column.id" prefWidth="50"/>
                <TableColumn fx:id="raisonSocialeColumn" text="%column.raison_sociale" prefWidth="250"/>
                <TableColumn fx:id="nomPrenomColumn" text="%column.nom_prenom" prefWidth="200"/>
                <TableColumn fx:id="villeColumn" text="%column.ville" prefWidth="120"/>
                <TableColumn fx:id="fixedAmountColumn" text="%column.ht" prefWidth="120"/>
                <TableColumn fx:id="ttcColumn" text="%column.ttc" prefWidth="120"/>
                <TableColumn fx:id="actionsColumn" text="%column.action" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</ScrollPane>
