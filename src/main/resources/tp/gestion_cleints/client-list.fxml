<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tp.gestion_cleints.ClientListController" 
            fitToWidth="true" fitToHeight="true"
            stylesheets="@styles.css">

    <VBox styleClass="content-area" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="%header.clients" styleClass="section-header"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="300"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="%btn.add_client" onAction="#handleAddClient" styleClass="button-success"/>
            <Button text="%btn.edit" onAction="#handleEditClient" styleClass="button-primary"/>
            <Button text="%btn.details" onAction="#handleViewDetails" styleClass="button-action"/>
            <Button text="%btn.delete" onAction="#handleDeleteClient" styleClass="button-danger"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="%btn.export_data" onAction="#handleExportData" styleClass="button-secondary"/>
            <Button text="%btn.import_data" onAction="#handleImportData" styleClass="button-secondary"/>
            <Button text="%btn.show_deleted" styleClass="button-secondary" onAction="#handleToggleDeleted" />
        </HBox>

        <TableView fx:id="clientTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nomPrenomColumn" text="%column.nom_prenom" prefWidth="250"/>
                <TableColumn fx:id="honorairesColumn" text="%column.honoraires" prefWidth="120"/>
                <TableColumn fx:id="autresColumn" text="%column.autres" prefWidth="120"/>
                <TableColumn fx:id="totalHonEtTtColumn" text="%column.total_hon_tt" prefWidth="150"/>
                <TableColumn fx:id="totalDesAvanceColumn" text="%column.total_avance" prefWidth="150"/>
                <TableColumn fx:id="resteColumn" text="%column.reste" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>
</ScrollPane>
