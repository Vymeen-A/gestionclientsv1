<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" styleClass="content-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tp.gestion_cleints.HiddenClientsController">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="%nav.hidden_clients" styleClass="section-header"/>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="300"/>
    </HBox>

    <TableView fx:id="clientTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="%column.id" prefWidth="50" />
            <TableColumn fx:id="raisonSocialeColumn" text="%column.raison_sociale" prefWidth="250" />
            <TableColumn fx:id="nomPrenomColumn" text="%column.nom_prenom" prefWidth="200" />
            <TableColumn fx:id="villeColumn" text="%column.ville" prefWidth="120" />
        </columns>
    </TableView>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="%btn.unhide" onAction="#handleUnhideClient" styleClass="button-primary"/>
        <Button text="%btn.back" onAction="#handleBack" styleClass="button-secondary"/>
    </HBox>
</VBox>
